extends ../layout

block content
	html(lang='en')
		head
			meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
			// Meta, title, CSS, favicons, etc.
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge')
			meta(name='viewport', content='width=device-width, initial-scale=1')
			title Charity Project | Post
			// Bootstrap
			link(href='../vendors/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
			// Font Awesome
			link(href='../vendors/font-awesome/css/font-awesome.min.css', rel='stylesheet')
			// NProgress
			link(href='../vendors/nprogress/nprogress.css', rel='stylesheet')
			// iCheck
			link(href='../vendors/iCheck/skins/flat/green.css', rel='stylesheet')
			// bootstrap-progressbar
			link(href='../vendors/bootstrap-progressbar/css/bootstrap-progressbar-3.3.4.min.css', rel='stylesheet')
			// JQVMap
			link(href='../vendors/jqvmap/dist/jqvmap.min.css', rel='stylesheet')
			// bootstrap-daterangepicker
			link(href='../vendors/bootstrap-daterangepicker/daterangepicker.css', rel='stylesheet')
			// Datatables
			link(href='../vendors/datatables.net-bs/css/dataTables.bootstrap.min.css', rel='stylesheet')
			link(href='../vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css', rel='stylesheet')
			link(href='../vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css', rel='stylesheet')
			link(href='../vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css', rel='stylesheet')
			link(href='../vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css', rel='stylesheet')
			// Custom Theme Style
			link(href='../build/css/custom.min.css', rel='stylesheet')
			script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyAxUeMBUbKnW-LKTWTIL656w7nHABuNMTI&libraries=places')
			script(src='../javascripts/post_details.js')
			script(src='../javascripts/global.js')			
		body.nav-md									
			.right_col(role='main')
				// top tiles
				.row.page-title
					.title(style='margin: 10px')
						#userId(style="display:none") #{docs.userId}
						h1 #{docs.postType}
				br
				br
				br
				.row
					// Tabs
					// Smart Wizard					
					.form-horizontal.form-label-left
						.col-md-1.col-xs-1#postRating(style="text-align: right")
						.col-md-11.col-xs-11
							h3 #{docs.postName}
							small
								| Posted by 
								a.userId(href="") #{docs.userId}
							hr
							.row
								.col-md-1
								.col-md-10.col-xs-12
									#content(style="display:none") #{docs.postContent}
									div#postContent						
				h1 Comments&nbsp;
					span#countComments (0)
				hr				
				.row
					form#commentForm.form-horizontal.form-label-left(action="/posts/addpost", method="post")
						.form-group
							label.control-label.col-md-3.col-sm-3.col-xs-12(style="text-align:right")
								| Content 
								span.required *
							.col-md-6.col-sm-6.col-xs-12
								textarea#txtCommentContent(name="postContent", style="width:90%", tabindex="-1")
								input#txtCommentId(type="hidden")
							br
							br
							br
							br
							.row#commentButtons
								.col-md-7.col-sm-7
								.col-md-1.col-sm-1.col-xs-12
									a.btn.btn-info.col-xs-12(style="float: right", onclick="postComment()") Submit
				.row#commentPane
					// End SmartWizard Content
					// /top tiles
				// /page content
				// footer content
				footer
					.pull-right
						| Gentelella - Bootstrap Admin Template by
						a(href='https://colorlib.com') Colorlib
					.clearfix
				// /footer content
			// Bootstrap
			script(src='../vendors/bootstrap/dist/js/bootstrap.min.js')
			// FastClick
			script(src='../vendors/fastclick/lib/fastclick.js')
			// NProgress
			script(src='../vendors/nprogress/nprogress.js')
			// Chart.js
			script(src='../vendors/Chart.js/dist/Chart.min.js')
			// gauge.js
			script(src='../vendors/gauge.js/dist/gauge.min.js')
			// bootstrap-progressbar
			script(src='../vendors/bootstrap-progressbar/bootstrap-progressbar.min.js')
			// iCheck
			script(src='../vendors/iCheck/icheck.min.js')
			// Skycons
			script(src='../vendors/skycons/skycons.js')
			// Flot
			script(src='../vendors/Flot/jquery.flot.js')
			script(src='../vendors/Flot/jquery.flot.pie.js')
			script(src='../vendors/Flot/jquery.flot.time.js')
			script(src='../vendors/Flot/jquery.flot.stack.js')
			script(src='../vendors/Flot/jquery.flot.resize.js')
			// Flot plugins
			script(src='../vendors/flot.orderbars/js/jquery.flot.orderBars.js')
			script(src='../vendors/flot-spline/js/jquery.flot.spline.min.js')
			script(src='../vendors/flot.curvedlines/curvedLines.js')
			// DateJS
			script(src='../vendors/DateJS/build/date.js')
			// JQVMap
			script(src='../vendors/jqvmap/dist/jquery.vmap.js')
			script(src='../vendors/jqvmap/dist/maps/jquery.vmap.world.js')
			script(src='../vendors/jqvmap/examples/js/jquery.vmap.sampledata.js')
			// bootstrap-daterangepicker
			script(src='../vendors/moment/min/moment.min.js')
			script(src='../vendors/bootstrap-daterangepicker/daterangepicker.js')
			// jquery.inputmask
			script(src='../vendors/jquery.inputmask/dist/min/jquery.inputmask.bundle.min.js')
			// Custom Theme Scripts
			script(src='../build/js/custom.min.js')
