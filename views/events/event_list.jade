extends ../layout

block content
	doctype html
	html(lang='en')
		head
			meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
			// Meta, title, CSS, favicons, etc.
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge')
			meta(name='viewport', content='width=device-width, initial-scale=1')
			title Charity Project | Event List
			// Bootstrap
			link(href='../vendors/bootstrap/dist/css/bootstrap.css', rel='stylesheet')
			// Font Awesome
			link(href='../vendors/font-awesome/css/font-awesome.min.css', rel='stylesheet')
			// NProgress
			link(href='../vendors/nprogress/nprogress.css', rel='stylesheet')
			// iCheck
			link(href='../vendors/iCheck/skins/flat/green.css', rel='stylesheet')
			// bootstrap-progressbar
			link(href='../vendors/bootstrap-progressbar/css/bootstrap-progressbar-3.3.4.min.css', rel='stylesheet')
			// JQVMap
			link(href='../vendors/jqvmap/dist/jqvmap.min.css', rel='stylesheet')
			// bootstrap-daterangepicker
			link(href='../vendors/bootstrap-daterangepicker/daterangepicker.css', rel='stylesheet')
			// Datatables
			link(href='../vendors/datatables.net-bs/css/dataTables.bootstrap.min.css', rel='stylesheet')
			link(href='../vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css', rel='stylesheet')
			link(href='../vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css', rel='stylesheet')
			link(href='../vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css', rel='stylesheet')
			link(href='../vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css', rel='stylesheet')
			// Custom Theme Style
			link(href='../build/css/custom.min.css', rel='stylesheet')
			script(src='../javascripts/events/event_list.js')		
		body.nav-md		
			.right_col(role='main')
				// top tiles
				.row.page-title
					.title(style='margin: 10px')
						h1 Events
				br
				br
				.container
					.row.tile_count
						ul.nav.nav-tabs
							li.col-md-3.col-sm-6.col-xs-12
								a#active-tab.count-tab(data-toggle='tab', href='#events')
									.tileA
										.tile_stats_count
											span.count_top
												i.fa.fa-bar-chart
												|  Total Events
											#countEvents.count 7
											span.count_bottom
												i.green 4% 
												|  From last Week
							li.col-md-3.col-sm-6.col-xs-12
								a.count-tab(data-toggle='tab', href='#upcomingEvents')
									.tileA
										.tile_stats_count
											span.count_top
												i.fa.fa-spinner.fa-pulse
												|  Upcoming Events
											#countUpcomingEvents.count 4
											span.count_bottom
												i.green
													i.fa.fa-sort-asc
													| 3%
												|  From last Week							
							li.col-md-3.col-sm-6.col-xs-12
								a.count-tab(data-toggle='tab', href='#pastEvents')
									.tileA
										.tile_stats_count
											span.count_top
												i.fa.fa-thumbs-o-up
												|  Past Events
											#countPastEvents.count.green 1
											span.count_bottom
												i.green
													i.fa.fa-sort-asc
													| 34%
												|  From last Week
							li.col-md-3.col-sm-6.col-xs-12
								a.count-tab(data-toggle='tab', href='#cancelledEvents')
									.tileA
										.tile_stats_count
											span.count_top
												i.fa.fa-thumbs-o-down
												|  Cancelled Events
											#countCancelledEvents.count.red 1
											span.count_bottom
												i.red
													i.fa.fa-sort-desc
													| 12%
												|  From last Week
				.tab-content
					#upcomingEvents.tab-pane.fade
						.row
							.col-md-12.col-sm-12.col-xs-12
								.col-md-6
									h3
										| Upcoming events 
										small (sub-title)
								.clearfix
							.x_content
								table#tableUpcomingEvents.table.table-striped.table-bordered.dt-responsive.nowrap.datatable-responsive(cellspacing='0', width='100%')
									thead
										tr
											th #
											th Action
											th Event
											th Type
											th User
											th Email
											th Phone
											th Start Date
											th Location
											th Budget
											th Create Date
									tbody
					#events.tab-pane.fade
						.row
							.col-md-12.col-sm-12.col-xs-12
								.col-md-6
									h3
										| All events 
										small (sub-title)
								.clearfix
							.x_content
								table#tableEvents.table.table-striped.table-bordered.dt-responsive.nowrap.datatable-responsive(cellspacing='0', width='100%')
									thead
										tr
											th #
											th Action
											th Event
											th Status
											th Type
											th User
											th Email
											th Phone
											th Start Date
											th Location
											th Budget
											th Create Date
									tbody
					#pastEvents.tab-pane.fade
						.row
							.col-md-12.col-sm-12.col-xs-12
								.col-md-6
									h3
										| Past events 
										small (sub-title)
								.clearfix
							.x_content
								table#tablePastEvents.table.table-striped.table-bordered.dt-responsive.nowrap.datatable-responsive(cellspacing='0', width='100%')
									thead
										tr
											th #
											th Action
											th Event
											th Type
											th User
											th Full Name
											th Company Name
											th Email
											th Phone
											th Start Date
											th Location
											th Budget
											th Create Date
											th Report?
									tbody				
					#cancelledEvents.tab-pane.fade
						.row
							.col-md-12.col-sm-12.col-xs-12
								.col-md-6
									h3
										| Cancelled events 
										small (sub-title)
								.clearfix
							.x_content
								table#tableCancelledEvents.table.table-striped.table-bordered.dt-responsive.nowrap.datatable-responsive(cellspacing='0', width='100%')
									thead
										tr
											th #
											th Action
											th Event
											th Type
											th User
											th Full Name
											th Company Name
											th Email
											th Phone
											th Start Date
											th Location
											th Budget
											th Create Date
									tbody
					// /top tiles
				// /page content
				// footer content
				footer
					.pull-right
						| Gentelella - Bootstrap Admin Template by 
						a(href='https://colorlib.com') Colorlib
					.clearfix
				// /footer content
