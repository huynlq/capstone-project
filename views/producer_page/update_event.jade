extends ../guest_page/layout

block content
	doctype html
	html.no-js
		head
			meta(charset='utf-8')
			title Single cause | Charity / Non-profit responsive Bootstrap HTML5 template
			meta(name='description', content='')
			meta(name='viewport', content='width=device-width, initial-scale=1')
			// Fonts
			link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,700', rel='stylesheet', type='text/css')
			link(href='http://fonts.googleapis.com/css?family=Dosis:400,700', rel='stylesheet', type='text/css')
			// Bootsrap
			link(rel='stylesheet', href='/guest_page/css/bootstrap.min.css')
			// Font awesome
			link(rel='stylesheet', href='/guest_page/css/font-awesome.min.css')
			// PrettyPhoto
			link(rel='stylesheet', href='/guest_page/css/prettyPhoto.css')
			// bootstrap-daterangepicker
			link(href='/vendors/bootstrap-daterangepicker/daterangepicker.css', rel='stylesheet')
			// Datatables
			link(href='/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css', rel='stylesheet')
			link(href='/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css', rel='stylesheet')
			link(href='/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css', rel='stylesheet')
			link(href='/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css', rel='stylesheet')
			link(href='/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css', rel='stylesheet')			
			// Template main Css
			link(rel='stylesheet', href='/guest_page/css/style.css')
			// Modernizr
			script(src='/guest_page/js/modernizr-2.6.2.min.js')
		body			
			.row(style="height:100px")
			.main-container
				.container
					.row
						.col-md-12
							h2.title-style-2
								| Update Event
								span.title-under
					.row.tile_count
						ul.nav.nav-tabs
							li.active.col-md-2.col-sm-6.col-xs-12
								a#active-tab.count-tab(data-toggle='tab', href='#donations')
									.tileA
										.tile_stats_count
											span.count_top
												i.fa.fa-bar-chart
												|  Current Donations
											#countDonations.count 0
							li.col-md-2.col-sm-6.col-xs-12
								a.count-tab(data-toggle='tab', href='#pendingDonations')
									.tileA
										.tile_stats_count
											span.count_top
												i.fa.fa-bar-chart
												|  Pending Donations
											#countPendingDonations.count 0
							li.col-md-2.col-sm-6.col-xs-12
								a.count-tab(data-toggle='tab', href='#participants')
									.tileA
										.tile_stats_count
											span.count_top
												i.fa.fa-spinner.fa-pulse
												|  Participants		
											#countParticipants.count 0		
							li.col-md-2.col-sm-6.col-xs-12
								a.count-tab(data-toggle='tab', href='#costs')
									.tileA
										.tile_stats_count
											span.count_top
												i.fa.fa-thumbs-o-up
												|  Activity Costs
											#countActivities.count 0
					.tab-content
						#donations.tab-pane.fade
							.row
								.col-md-12.col-sm-12.col-xs-12
									.col-md-6
										h3
											| Donations
									.clearfix
								.x_content
									.col-md-8.col-sm-8.col-xs-12
										table#tableDonation.table.table-style-1.table-striped.table-bordered.dt-responsive.nowrap.datatable-responsive(cellspacing='0', width='100%')
											thead
												tr
													th #
													th Action
													th Donator
													th Item
													th Quantity
													th Time
											tbody
									.col-md-4.col-sm-4.col-xs-12
										form.form-horizontal.form-label-left
											.form-group
												label.control-label.col-md-3.col-sm-3.col-xs-12
													| Donator 
													span.required *
												.col-md-9.col-sm-9.col-xs-12
													input#txtDonatorName.form-control.col-md-7.col-xs-12(type='text', required='required')
											.form-group
												label.control-label.col-md-3.col-sm-3.col-xs-12
													| Donation Item
													span.required *
												.col-md-9.col-sm-9.col-xs-12
													select#txtDonationItem.form-control.col-md-7.col-xs-12(required='required', ng-trim='false')
											.form-group
												label.control-label.col-md-3.col-sm-3.col-xs-12
													| Quantity 
													span.required *
												.col-md-9.col-sm-9.col-xs-12
													input#txtDonationNumber.form-control.col-md-7.col-xs-12(type='text', required='required')
											.row
												.col-md-5.col-sm-5
												.col-md-4.col-sm-4.col-xs-12
													a.btn.btn-info.col-xs-12(onclick='addDonation()') Add >>
						#pendingDonations.tab-pane.fade
							.row
								.col-md-12.col-sm-12.col-xs-12
									.col-md-6
										h3
											| Pending Donations
									.clearfix
								.x_content
									.col-md-12.col-sm-12.col-xs-12
										table#tablePendingDonation.table.table-style-1.table-striped.table-bordered.dt-responsive.nowrap.datatable-responsive(cellspacing='0', width='100%')
											thead
												tr
													th #
													th Action
													th Donator
													th Email
													th Phone Number
													th Item
													th Quantity
													th Time
											tbody
						#participants.tab-pane.fade
							.row
								.col-md-12.col-sm-12.col-xs-12
									.col-md-6
										h3
											| Participants
									.clearfix
								.x_content
									table#tableParticipants.table.table-style-1.table-striped.table-bordered.dt-responsive.nowrap.datatable-responsive(cellspacing='0', width='100%')
										thead
											tr
												th #
												th Action
												th User
												th Full Name
												th Email
												th Phone
												th Date Joined
										tbody
						#costs.tab-pane.fade
							.row
								.col-md-12.col-sm-12.col-xs-12
									.col-md-6
										h3
											| Activity Costs
									.clearfix
								.x_content
									table#tableActivityCosts.table.table-style-1.table-striped.table-bordered.dt-responsive.nowrap.datatable-responsive(cellspacing='0', width='100%')
										thead
											tr
												th #
												th Day
												th Time
												th Place
												th Activity
												th Estimated Cost
												th Actual Cost
												th Action
										tbody
			#edit-actual-cost-form(title='Edit Actual Cost')
				p.validateTips All form fields are required.
				form
					fieldset
						.form-group
							label.control-label.col-md-2.col-sm-2.col-xs-12(style="text-align:right")
								| Day 
								span.required *
							.col-md-10.col-sm-10.col-xs-12
								input#txtEditActivityDay.form-control.col-md-7.col-xs-12(type='text', readonly='readonly')
								span#txtEditActivityId(style='display:none')
						.form-group
							label.control-label.col-md-2.col-sm-2.col-xs-12(style="text-align:right")
								| Time 
								span.required *
							.col-md-10.col-sm-10.col-xs-12
								input#txtEditActivityTime.form-control.col-md-7.col-xs-12(type='text', readonly='readonly')
						.form-group
							label.control-label.col-md-2.col-sm-2.col-xs-12(style="text-align:right")
								| Place 
								span.required *
							.col-md-10.col-sm-10.col-xs-12
								input#txtEditActivityPlace.form-control.col-md-7.col-xs-12(type='text', readonly='readonly')
						.form-group
							label.control-label.col-md-2.col-sm-2.col-xs-12(style="text-align:right")
								| Activity 
								span.required *
							.col-md-10.col-sm-10.col-xs-12
								input#txtEditActivity.form-control.col-md-7.col-xs-12(type='text', readonly='readonly')			
						.form-group
							label.control-label.col-md-2.col-sm-2.col-xs-12(style="text-align:right")
								| Estimated Cost
								span.required *
							.col-md-10.col-sm-10.col-xs-12
								input#txtEditActivityEstCost.form-control.col-md-7.col-xs-12(type='text', readonly='readonly')
						.form-group
							label.control-label.col-md-2.col-sm-2.col-xs-12(style="text-align:right")
								| Actual Cost
								span.required *
							.col-md-10.col-sm-10.col-xs-12
								input#txtEditActivityActualCost.form-control.col-md-7.col-xs-12(type='text', required='required')
			// Bootsrap javascript file
			script(src='/guest_page/js/bootstrap.min.js')
			// PrettyPhoto javascript file
			script(src='/guest_page/js/jquery.prettyPhoto.js')
			// Google map
			script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyAxUeMBUbKnW-LKTWTIL656w7nHABuNMTI&libraries=places')
			// Datatables
			script(src='/vendors/datatables.net/js/jquery.dataTables.min.js')
			script(src='/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js')
			script(src='/vendors/datatables.net-buttons/js/dataTables.buttons.min.js')
			script(src='/vendors/datatables.net-buttons-bs/js/buttons.bootstrap.min.js')
			script(src='/vendors/datatables.net-buttons/js/buttons.flash.min.js')
			script(src='/vendors/datatables.net-buttons/js/buttons.html5.min.js')
			script(src='/vendors/datatables.net-buttons/js/buttons.print.min.js')
			script(src='/vendors/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js')
			script(src='/vendors/datatables.net-keytable/js/dataTables.keyTable.min.js')
			script(src='/vendors/datatables.net-responsive/js/dataTables.responsive.min.js')
			script(src='/vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js')
			script(src='/vendors/datatables.net-scroller/js/dataTables.scroller.min.js')
			script(src='/vendors/jszip/dist/jszip.min.js')
			script(src='/vendors/pdfmake/build/pdfmake.min.js')
			script(src='/vendors/pdfmake/build/vfs_fonts.js')			
			// Flot
			script(src='/vendors/Flot/jquery.flot.js')
			script(src='/vendors/Flot/jquery.flot.pie.js')
			script(src='/vendors/Flot/jquery.flot.time.js')
			script(src='/vendors/Flot/jquery.flot.stack.js')
			script(src='/vendors/Flot/jquery.flot.resize.js')
			// bootstrap-daterangepicker
			script(src='	/vendors/moment/min/moment.min.js')
			script(src='	/vendors/bootstrap-daterangepicker/daterangepicker.js')
			// jquery.inputmask
			script(src='	/vendors/jquery.inputmask/dist/min/jquery.inputmask.bundle.min.js')
