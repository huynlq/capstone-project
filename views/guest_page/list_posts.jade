extends layout

block content
	doctype html
	html.no-js
		head
			meta(charset='utf-8')
			title Causes | Charity / Non-profit responsive Bootstrap HTML5 template
			meta(name='description', content='')
			meta(name='viewport', content='width=device-width, initial-scale=1')
			// Fonts
			link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,700', rel='stylesheet', type='text/css')
			link(href='http://fonts.googleapis.com/css?family=Dosis:400,700', rel='stylesheet', type='text/css')
			// Bootsrap
			link(rel='stylesheet', href='guest_page/css/bootstrap.min.css')
			// Font awesome
			link(rel='stylesheet', href='guest_page/css/font-awesome.min.css')
			// PrettyPhoto
			link(rel='stylesheet', href='guest_page/css/prettyPhoto.css')
			// Template main Css
			link(rel='stylesheet', href='guest_page/css/style.css')
			// Modernizr
			script(src='guest_page/js/modernizr-2.6.2.min.js')
		body
			// /. main-header
			.row(style="height:80px")
			.page-heading.text-center
				.container.zoomIn.animated
					h1.page-title
						span#header NEWS
						span.title-under
					p.page-description
						span#header-desc Catch up all the lastest news!
			.main-container
				.our-causes.fadeIn.animated
					.container
						#listPosts
				// /.our-causes
			// /.main-containe
			// Bootsrap javascript file
			script(src='guest_page/js/bootstrap.min.js')
			// PrettyPhoto javascript file
			script(src='guest_page/js/jquery.prettyPhoto.js')
			// Google map
			script(src='http://maps.google.com/maps/api/js?sensor=false&libraries=places', type='text/javascript')
			// Countdown JS
			script(src='/vendors/countdown/countdown.js')
			// Template main javascript
			script(src='guest_page/js/list_posts.js')
