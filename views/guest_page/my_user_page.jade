extends layout

block content
	doctype html
	html.no-js
		head
			meta(charset='utf-8')
			title Single cause | Charity / Non-profit responsive Bootstrap HTML5 template
			meta(name='description', content='')
			meta(name='viewport', content='width=device-width, initial-scale=1')
			// Fonts
			link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,700', rel='stylesheet', type='text/css')
			link(href='http://fonts.googleapis.com/css?family=Dosis:400,700', rel='stylesheet', type='text/css')
			// Bootsrap
			link(rel='stylesheet', href='/guest_page/css/bootstrap.min.css')
			// Font awesome
			link(rel='stylesheet', href='/guest_page/css/font-awesome.min.css')
			// PrettyPhoto
			link(rel='stylesheet', href='/guest_page/css/prettyPhoto.css')
			// Datatables
			link(href='/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css', rel='stylesheet')
			link(href='/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css', rel='stylesheet')
			link(href='/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css', rel='stylesheet')
			link(href='/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css', rel='stylesheet')
			link(href='/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css', rel='stylesheet')
			// Owl carousel
			link(rel='stylesheet', href='/guest_page/css/owl.carousel.css')
			// Template main Css
			link(rel='stylesheet', href='/guest_page/css/style.css')
			// Modernizr
			script(src='/guest_page/js/modernizr-2.6.2.min.js')
		body			
			.row(style="height:80px")
			.page-heading.text-center
				.container.zoomIn.animated
					h1.page-title(style="text-transform: uppercase;") My User Page
						span.title-under
					p.page-description
						| Let everyone know about yourself.
			.main-container
				.container
					.row
					// Tabs
					// Smart Wizard					
					.form-horizontal.form-label-left
						h3(style='margin-left: 50px') User Information
						hr
						form(action="/users/updatemyuserinfo", method="post", enctype="multipart/form-data").row
							.col-md-1.col-sm-1
							.col-md-3.col-sm-3.col-xs-12(style='text-align: center')
								img#txtUserImageSrc(src='#', alt='Set your profile image!', style='height: 150px; max-width: 300px')
								br
								br
								.row										
									input#inputUserImage.btn.btn-info.col-md-12.col-sm-12.col-xs-12(type="file", name="displayUserImage", accept=".png,.jpg,.jpeg")
									input#txtImageSrc(type="hidden", name="image")
							.col-md-1.col-sm-1
							.col-md-7.col-sm-7.col-xs-12
								.form-group
									label.control-label.col-md-2.col-sm-2.col-xs-12
										| Username
									.col-md-7.col-sm-7.col-xs-12
										input#txtUsername.form-control.col-md-7.col-xs-12(type='text', disabled='disabled')
								.form-group
									label.control-label.col-md-2.col-sm-2.col-xs-12
										| Full Name
									.col-md-7.col-sm-7.col-xs-12
										input#txtFullName.form-control.col-md-7.col-xs-12(type='text', name='fullName')
								.form-group
									label.control-label.col-md-2.col-sm-2.col-xs-12
										| Address
									.col-md-7.col-sm-7.col-xs-12
										input#txtAddress.form-control.col-md-7.col-xs-12(type='text', name='address')
								.form-group
									label.control-label.col-md-2.col-sm-2.col-xs-12
										| Email 
									.col-md-7.col-sm-7.col-xs-12
										input#txtEmail.form-control.col-md-7.col-xs-12(type='text', name='email')
								.form-group
									label.control-label.col-md-2.col-sm-2.col-xs-12
										| Phone 
									.col-md-7.col-sm-7.col-xs-12
										input#txtPhone.form-control.col-md-7.col-xs-12(type='text', name='phoneNumber')
								.row
									.col-md-6.col-sm-6
									.col-md-1.col-sm-1.col-xs-12
										button.btn.btn-info(type="submit")
											strong Save User Info
						br
						#companyInfoDiv
							h3(style='margin-left: 50px') Company Information
							hr
							form(action="/users/updatemycompanyinfo", method="post", enctype="multipart/form-data").row
								.col-md-1.col-sm-1
								.col-md-3.col-sm-3.col-xs-12(style='text-align: center')
									img#txtCompanyImageSrc(src='#', alt='Set your company image!', style='height: 150px; max-width: 300px')
									br
									br
									.row										
											input#inputCompanyImage.btn.btn-info.col-md-12.col-sm-12.col-xs-12(type="file", name="displayCompanyImage", accept=".png,.jpg,.jpeg")
											input#txtCompanyImageSrc(type="hidden", name="companyImage")
								.col-md-1.col-sm-1
								.col-md-7.col-sm-7.col-xs-12
									.form-group
										label.control-label.col-md-2.col-sm-2.col-xs-12
											| Name
										.col-md-7.col-sm-7.col-xs-12
											input#txtCompanyName.form-control.col-md-7.col-xs-12(type='text', name='companyName')
									.form-group
										label.control-label.col-md-2.col-sm-2.col-xs-12
											| Address
										.col-md-7.col-sm-7.col-xs-12
											input#txtCompanyAddress.form-control.col-md-7.col-xs-12(type='text', name='companyAddress')
									.form-group
										label.control-label.col-md-2.col-sm-2.col-xs-12
											| Email 
										.col-md-7.col-sm-7.col-xs-12
											input#txtCompanyEmail.form-control.col-md-7.col-xs-12(type='text', name='companyEmail')
									.form-group
										label.control-label.col-md-2.col-sm-2.col-xs-12
											| Phone 
										.col-md-7.col-sm-7.col-xs-12
											input#txtCompanyPhone.form-control.col-md-7.col-xs-12(type='text', name='companyPhoneNumber')
									.form-group
										label.control-label.col-md-2.col-sm-2.col-xs-12
											| Website 
										.col-md-7.col-sm-7.col-xs-12
											input#txtCompanyWebsite.form-control.col-md-7.col-xs-12(type='text', name='companyWebsite')
									.row
									.col-md-6.col-sm-6
									.col-md-1.col-sm-1.col-xs-12
										button.btn.btn-info(type="submit")
											strong Save Company Info
							br
						#eventJoined-panel
						#eventProduced-panel
