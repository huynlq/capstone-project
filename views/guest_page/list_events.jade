extends layout

block content
	doctype html
	html.no-js
		head
			meta(charset='utf-8')
			title Causes | Charity / Non-profit responsive Bootstrap HTML5 template
			meta(name='description', content='')
			meta(name='viewport', content='width=device-width, initial-scale=1')
			// Fonts
			link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,700', rel='stylesheet', type='text/css')
			link(href='http://fonts.googleapis.com/css?family=Dosis:400,700', rel='stylesheet', type='text/css')
			// Bootsrap
			link(rel='stylesheet', href='guest_page/css/bootstrap.min.css')
			// Font awesome
			link(rel='stylesheet', href='guest_page/css/font-awesome.min.css')
			// PrettyPhoto
			link(rel='stylesheet', href='guest_page/css/prettyPhoto.css')
			// Template main Css
			link(rel='stylesheet', href='guest_page/css/style.css')
			// Modernizr
			script(src='guest_page/js/modernizr-2.6.2.min.js')
		body
			// /. main-header
			.row(style="height:80px")
			.page-heading.text-center
				.container.zoomIn.animated
					h1.page-title
						span#header OUR EVENTS 
						span.title-under
					p.page-description
						span#header-desc Give us a hand and join our voluntary events below.
			.main-container
				.our-causes
					.container
						input#txtSearch(type="text", placeholder="Search Event", onkeyup="search()", class="form-control")
						.checkbox
							label.checkbox-inline
								input#txtSearchName(type="checkbox" checked="checked", name="searchName", onchange="search()")
								span#searchBy-name Name
							label.checkbox-inline
								input#txtSearchDesc(type="checkbox" checked="checked", name="searchDesc", onchange="search()")
								span#searchBy-description Description
							label.checkbox-inline
								input#txtSearchAddress(type="checkbox" checked="checked", name="searchAddress", onchange="search()")
								span#searchBy-address Address
							label(style="margin-right: 20px; cursor: default") | 
							label.checkbox-inline
								input#txtSearchUpcoming(type="checkbox" checked="checked", name="searchUpcoming", onchange="search()")
								span#searchBy-upcoming Upcoming
							label.checkbox-inline
								input#txtSearchInProgress(type="checkbox" checked="checked", name="searchInProgress", onchange="search()")
								span#searchBy-inProgress In Progress
							label.checkbox-inline
								input#txtSearchPast(type="checkbox" checked="checked", name="searchPast", onchange="search()")
								span#searchBy-past Past
							.pull-right
								label.radio-inline#sortBy
									| Sort by: 
								label.radio-inline
									input(type='radio', name='optradio', onchange="populateEvents()", checked="checked")
									span#sortBy-date Date Created
								label.radio-inline
									input(type='radio', name='optradio', onchange="nearby()")
									span#sortBy-location Near Me
						#listEvents.fadeIn.animated
				#dvMap(style='height:200px; margin: 0; width: 100%')
				// /.our-causes
			// /.main-containe
			// Donate Modal
			#donateModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='donateModalLabel', aria-hidden='true')
				.modal-dialog
					.modal-content
						.modal-header
							button.close(type='button', data-dismiss='modal', aria-label='Close')
								span(aria-hidden='true') ×
							h4#donateModalLabel.modal-title DONATE NOW
						.modal-body
							form.form-donation
								h3.title-style-1.text-center
									| Thank you for your donation 
									span.title-under
								.row
									.form-group.col-md-12
										input#amount.form-control(type='text', placeholder='AMOUNT(€)')
								.row
									.form-group.col-md-6
										input.form-control(type='text', name='firstName', placeholder='First name*')
									.form-group.col-md-6
										input.form-control(type='text', name='lastName', placeholder='Last name*')
								.row
									.form-group.col-md-6
										input.form-control(type='text', name='email', placeholder='Email*')
									.form-group.col-md-6
										input.form-control(type='text', name='phone', placeholder='Phone')
								.row
									.form-group.col-md-12
										input.form-control(type='text', name='address', placeholder='Address')
								.row
									.form-group.col-md-12
										textarea.form-control(cols='30', rows='4', name='note', placeholder='Additional note')
								.row
									.form-group.col-md-12
										button.btn.btn-primary.pull-right(type='submit', name='donateNow') DONATE NOW
			// /.modal
			// Bootsrap javascript file
			script(src='guest_page/js/bootstrap.min.js')
			// PrettyPhoto javascript file
			script(src='guest_page/js/jquery.prettyPhoto.js')
			// Google map
			script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyAxUeMBUbKnW-LKTWTIL656w7nHABuNMTI&libraries=places')
			// script(src='http://maps.google.com/maps/api/js?sensor=false&libraries=places', type='text/javascript')
			// Countdown JS
			script(src='/vendors/countdown/countdown.js')
			// Template main javascript
			script(src='guest_page/js/list_events.js')
